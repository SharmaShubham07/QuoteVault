<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="14dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="3dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:orientation="vertical"
        android:padding="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Top Row: Quote Icon Left + Share + Heart Right -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Quote Icon -->
            <ImageView
                android:id="@+id/ivQuoteIcon"
                android:src="@drawable/ic_quote"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:tint="@color/purplePrimary" />

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <!-- Share Button -->
            <ImageView
                android:id="@+id/btnShareCard"
                android:src="@drawable/ic_share"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="Share quote"
                android:clickable="true"
                android:focusable="true"
                app:tint="@color/grayDark" />

            <!-- Fav Button -->
            <ImageView
                android:id="@+id/ivFav"
                android:src="@drawable/ic_heart_outline"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:contentDescription="Add to favorites"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <!-- Quote Text -->
        <TextView
            android:id="@+id/tvQuote"
            android:text="“Quote goes here...”"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Author Row -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="14dp">

            <!-- Blue Line -->
            <View
                android:layout_width="4dp"
                android:layout_height="20dp"
                android:background="@color/purplePrimary" />

            <TextView
                android:id="@+id/tvAuthor"
                android:text="Theodore Roosevelt"
                android:textSize="14sp"
                android:textColor="@color/purplePrimary"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Category Label -->
        <TextView
            android:id="@+id/tvCategory"
            android:text="WISDOM"
            android:textSize="12sp"
            android:textColor="@color/grayDark"
            android:layout_marginTop="6dp"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</androidx.cardview.widget.CardView>