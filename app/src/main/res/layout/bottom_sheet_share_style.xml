<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Header -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Card Style"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnBackground"
        android:layout_marginBottom="24dp" />

    <!-- Style 1: Minimal Dark -->
    <androidx.cardview.widget.CardView
        android:id="@+id/style1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/card_style_minimal_dark"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Emoji/Icon -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ¨"
                android:textSize="20sp"
                android:layout_marginEnd="12dp" />

            <!-- Style Name -->
            <TextView
                android:id="@+id/tvStyle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minimal Dark"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_weight="1" />

            <!-- Selection Indicator -->
            <ImageView
                android:id="@+id/ivSelected1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_check_circle"
                android:visibility="gone"
                app:tint="@android:color/white" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Style 2: Gradient Sunset -->
    <androidx.cardview.widget.CardView
        android:id="@+id/style2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        android:background="@drawable/bg_gradient_sunset"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Emoji/Icon -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒ…"
                android:textSize="20sp"
                android:layout_marginEnd="12dp" />

            <!-- Style Name -->
            <TextView
                android:id="@+id/tvStyle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gradient Sunset"
                android:textSize="16sp"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold"
                android:layout_weight="1" />

            <!-- Selection Indicator -->
            <ImageView
                android:id="@+id/ivSelected2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_check_circle"
                android:visibility="gone"
                app:tint="@android:color/white" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Style 3: Modern Blue Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/style3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/card_style_modern_blue"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Emoji/Icon -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“˜"
                android:textSize="20sp"
                android:layout_marginEnd="12dp" />

            <!-- Style Name -->
            <TextView
                android:id="@+id/tvStyle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modern Blue Card"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_weight="1" />

            <!-- Selection Indicator -->
            <ImageView
                android:id="@+id/ivSelected3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_check_circle"
                android:visibility="gone"
                app:tint="@android:color/white" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>