<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Primary Purple Filled Button -->
    <style name="PrimaryButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/bg_btn_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!-- Primary Button on Dark Mode -->
    <style name="PrimaryButtonStyleDark" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/bg_btn_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!-- Social Button Style (White rounded boxes) -->
    <style name="SocialButtonStyle">
        <item name="android:background">@drawable/bg_input</item>
        <item name="android:elevation">0dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Input Label -->
    <style name="LabelText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Link Button Text -->
    <style name="LinkText">
        <item name="android:textColor">@color/purplePrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
