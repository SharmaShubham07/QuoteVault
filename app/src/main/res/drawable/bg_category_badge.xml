<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient background -->
    <gradient
        android:startColor="#30FFFFFF"
        android:centerColor="#50FFFFFF"
        android:endColor="#30FFFFFF"
        android:angle="90" />

    <!-- Rounded corners -->
    <corners android:radius="20dp" />

    <!-- Optional: Shadow effect with stroke -->
    <stroke
        android:width="1dp"
        android:color="#20FFFFFF" />
</shape>